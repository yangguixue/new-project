.box {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 4;
}

.block {
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.8;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 3;
}

.content {
  color: #fff;
  height: 300rpx;
  z-index: 4;
  font-size: 32rpx;
  display: inline-block;
  position: fixed;
  top: 40%;
}

.ok {
  width: 300rpx;
  margin-top: 60rpx;
  background: #ff0033;
  color: #fff;
  font-size: 30rpx;
}

