.list {
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  color: #666;
  overflow: hidden;
  margin-bottom: 2rpx;
}

.pd {
  background: #fff;
  overflow: hidden;
}

.list-l {
  float: left;
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.list-r {
  width: 510rpx;
  float: left;
}

.shop-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #373737;
  margin-bottom: 12rpx;
  overflow: hidden;
}

.real-shop, .new-shop {
  float: left;
  font-size: 22rpx;
  padding: 0 5rpx;
  line-height: 35rpx;
  margin: 4rpx 5rpx 0 0;
  border-radius: 4rpx;
}

.shop-name {
  float: left;
}

.real-shop {
  color: #664000;
  background: #fdeb1d;
}

.new-shop {
  color: #fff;
  background: #ff0000;
}

.shop-intro {
  width: 100%;
  height: 76rpx;
}

.address {
  width: 20rpx;
  height: 24rpx;
  margin-right: 10rpx;
}