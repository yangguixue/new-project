
.add {
  width: 90rpx;
  height: 70rpx;
  background: #ff0033;
  border-radius: 200rpx;
  text-align: center;
  padding-top: 20rpx;
  position: fixed;
  bottom: 200rpx;
  right: 60rpx;
}

.circle-info {
  display: block;
  background: #fff;
  height: 200rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 10rpx;
  border-bottom: 1px solid #f1f2f2;
}

.circle-img {
  width: 200rpx;
  height: 200rpx;
  float: left;
  margin-right: 20rpx;
}

.info-r-t,.circle-focus{
  float: left;
}

.info-r-t {
  width:470rpx;
}

.name {
  float: left;
  line-height: 80rpx;
}

.join-button {
  width: 160rpx;
  height: 60rpx;
  background: #ff0033;
  border-radius: 8rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
  float: right;
}

.exit {
  background: #999;
}

.circle-intro {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.circle-focus {
  font-size: 28rpx;
}

.number {
  margin-right: 30rpx;
}

.active {
  margin-right: 115rpx;
}

.share {
  width: 46rpx;
  height: 46rpx;
}