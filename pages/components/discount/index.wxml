<block wx:if="{{isDetail === false}}">
  <navigator url="{{'../../container/discountDetail/index?id=' + items.id}}">
    <view class="box">
      <view class="content">
        <image src="{{items.smeta}}" class="discount-img" />
        <view class="title"> {{ items.post_title }}</view>
        <view class="detail">
          <text class="detail-left"> {{ items.post_discount }}</text>
          <text class="detail-right"> {{ items.start_time }} 到 {{ items.end_time }}</text>
        </view>
      </view>
    </view>
  </navigator>
</block>

<view class="box" wx:else>
  <view class="content">
    <image src="{{items.smeta}}" class="discount-img" />
    <view class="title"> {{ items.post_title }}</view>
    <view class="detail">
      <text class="detail-left"> {{ items.post_discount }}</text>
      <text class="detail-right"> {{ items.start_time }} 到 {{ items.end_time }}</text>
    </view>
  </view>
</view>