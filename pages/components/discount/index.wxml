<view class='box'>
  <view class='shop' wx:if="{{!info.store_name == '官方'}}">
    <view class='shop-l'>
      <image src='{{info.shop_logo}}' />
    </view>
    <view class='shop-c'>
      <view class='shop-name'>{{info.shop_name}}</view>
      <view class='shop-addr'>离你33米</view>
    </view>
    <navigator url='../shopDetail/index?id={{info.shop_id}}'>
      <view class='shop-r'>进入店铺</view>
    </navigator>
  </view>
  
   <!-- 详情页 -->
  <swiper indicator-dots="{{true}}" autoplay="{{true}}" interval="2000" class='img-box2' wx:if="{{isDetail && info.store_name !== '官方'}}">
    <block wx:for="{{info.altas}}" wx:key="{{index}}">
      <swiper-item>
        <image src='{{item}}' mode="aspectFill" />
      </swiper-item>
    </block>
  </swiper>

  <view class='img-box3' wx:if="{{isDetail && info.store_name == '官方'}}">
    <image src='{{info.smeta}}' mode="aspectFill" />
  </view>  

  <navigator url='../discountDetail/index?id={{info.id}}'>
    <!-- 列表页 非detail 无banner -->
    <view class='img-box' wx:if="{{!isDetail && !info.smeta}}">
      <block wx:for="{{info.altas}}" wx:key="{{info.id}}">
        <image src='{{item}}' mode="aspectFill" class='discount-img' />
      </block>
    </view> 
    <!-- 有banner -->
    <view class='img-box3' wx:if="{{info.smeta && !isDetail}}">
      <image src='{{info.smeta}}' mode="aspectFill" />
    </view>  

    <view class='discount-title'>
      <text class='sign'>优惠</text>
      <text> {{info.post_title}}</text>
    </view>
  </navigator>
</view>