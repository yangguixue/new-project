
.box {
  background: #fff;
  overflow: hidden;
  padding: 18rpx 30rpx;
  border-bottom: 1px solid #f1f2f2;
}

.content {
  position: relative;
}

.discount-img {
  width: 100%;
  height: 280rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin:10rpx 0;
}

.detail-left {
  float: left;
  color: #ff0033;
  font-size: 40rpx;
}

.detail-right {
  font-size: 26rpx;
  color: #999;
  float: right;
  margin-top: 10rpx
}

.triangle {
  width: 0;
  height: 0;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 1;
}

.active-ing {
  border-top: 60px solid #e90021;
  border-left: 60px solid transparent; 
}

.active-will {
  border-top: 60px solid #0069b2;
  border-left: 60px solid transparent; 
}

.active-ed {
  border-top: 60px solid #666666;
  border-left: 60px solid transparent; 
}

.status {
  position: absolute;
  top: 32rpx;
  right: 12rpx;
  z-index: 3;
  color: #fff;
  font-size: 28rpx;
  transform:rotate(45deg);
}