.box {
  padding: 30rpx 30rpx 0;
  font-size: 28rpx;
  color: #333;
  background: #fff;
}

.shop {
  overflow: hidden;
  padding: 0 0 22rpx 0; 

}

.shop-l, .shop-c, .shop-r {
  float: left;
}

.shop-r {
  float: right;
  color: #fd450f;
  line-height: 40rpx;
  font-size: 24rpx;
  border: 2rpx solid #fd450f;
  padding: 0 15rpx;
  border-radius: 40rpx;
  margin-top: 14rpx;
}

.shop-l {
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
}

.shop-addr {
  font-size: 24rpx;
  color: #666; 
  margin-top: 18rpx;
}

.img-box {
  display: flex;
  margin-top: 22rpx;
  justify-content: space-between;
}

.img-box2 {
  width: 690rpx;
  height: 690rpx;
}

.img-box3 {
  width: 100%;
  height: 240rpx;
}

.discount-img {
  width: 220rpx;
  height: 224rpx;
}

.discount-title {
  padding: 25rpx 0;
  font-weight: bold;
  border-bottom: 2rpx solid #dcdcdc;
}

.sign {
  padding: 0 10rpx;
  color: #fff;
  margin-right: 10rpx;
  background: #fd450f;
  border-radius: 6rpx;
}