.img-box {
  display: flex;
  justify-content: space-between;
}

.discount-img {
  width: 220rpx;
  height: 224rpx;
}

.discount-title {
  padding: 25rpx 0;
  font-weight: bold;
  border-bottom: 2rpx solid #dcdcdc;
