/* pages/circleDetail/index.wxss */
@import '../components/messageCard.wxss';
page {
  background: #f1f2f2;
  font-family: '微软雅黑';
}

.add {
  width: 120rpx;
  height: 92rpx;
  background: #ff0033;
  border-radius: 200rpx;
  text-align: center;
  padding-top: 28rpx;
  position: fixed;
  bottom: 200rpx;
  right: 60rpx;
}

.circle-info {
  background: #fff;
  height: 200rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 10rpx;
}

.circle-img {
  width: 200rpx;
  height: 200rpx;
  float: left;
  margin-right: 20rpx;
}

.info-r-t,.circle-intro,.circle-focus{
  float: left;
}

.info-r-t {
  width:470rpx;
}

.name {
  float: left;
  line-height: 80rpx;
}

.join-button {
  width: 160rpx;
  height: 60rpx;
  background: #ff0033;
  border-radius: 8rpx;
  color: #fff;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
  float: right;
}

.circle-intro {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.circle-focus {
  font-size: 28rpx;
}

.number {
  margin-right: 30rpx;
}

.active {
  margin-right: 115rpx;
}

.share {
  width: 46rpx;
  height: 46rpx;
}

.new-message{
  font-size: 26rpx;
  padding: 0 30rpx;
  background: #fff;
  height: 100rpx;
  line-height: 100rpx;
  margin-bottom: 10rpx;
}

.new-icon {
  width: 80rpx;
  height: 40rpx;
  float: left;
  margin: 28rpx 20rpx 0 0; 
}