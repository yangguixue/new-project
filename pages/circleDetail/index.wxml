<!--pages/circleDetail/index.wxml-->
<import src="../components/messageCard.wxml"/>
<view class="add">
  <image src="../images/add.png" style="width:64rpx;height:64rpx;" />
</view>
<view class="circle-info">
  <image class="circle-img" src="../images/quanziImg.png"/>
  <view class="info-r-t">
    <view class="name">王者荣耀</view>
    <view class="join-button">加入圈子</view>
  </view>
  <view class="circle-intro">
    打响王者之间的斗争！
  </view>
  <view class="circle-focus">
    <text class="number">人数: 33人</text>
    <text class="active">动态：33条</text>
    <image src="../images/share.png" class="share" />
  </view>
</view>
<view class="new-message">
  <image src="../images/new.png" class="new-icon" style="width:80rpx; height:40rpx;float:left;margin-top:28rpx;" />
  <text>加入圈子才可以发动态哦~~精华动态将被置顶！</text>
</view>
<template is="message"/>