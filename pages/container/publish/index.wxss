/* pages/publish/index.wxss */
page {
  text-align: center;
  color: #fff;
  background: #333;
  font-size: 28rpx;
  font-family: '微软雅黑';
  border-top: 2rpx solid #636363;
}

.fl {
  float: left;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  margin: 80rpx 0 35rpx 0;
}

.warning {
  width: 100%;
  overflow: hidden;
  margin-bottom: 22rpx;
}

.line {
  width: 164rpx;
  height:3rpx;
  margin: 10rpx 30rpx;
}

.catelog{
  height: 270rpx;
  padding: 50rpx 30rpx;
  background: #2f2f2f;
}

.tip01 {
  margin: 30rpx 0;
}

.scroll {
  width: 100%;
  height: 280rpx;
  text-align: left;
}

.item {
  text-align: center;
  font-size: 24rpx;
  display: inline-block;
  width: 98rpx;
  padding: 0 20rpx;
  margin-bottom: 32rpx;
}

.catelog-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;
}