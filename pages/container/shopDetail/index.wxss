/* pages/container/shopDetail/index.wxss */
page {
  background: #f1f2f2;
}

.info-box {
  margin: 10rpx 0 8rpx 0;
  font-size: 24rpx;
}

.shop-info {
  overflow: hidden;
  line-height: 70rpx;
  border-bottom: 2rpx solid #f1f2f2;
}

.info, .info-icon {
  float: left;
}

.info-icon {
  width: 34rpx;
  height: 34rpx;
  margin: 18rpx 15rpx 0 0;
}

.title {
  line-height: 70rpx;
  font-size: 26rpx;
  font-weight: bold;
}

.images-box {
  width: 100%;
  height: 150rpx;
  margin-bottom: 20rpx;
}

.image-list {
  width: 150rpx;
  height: 150rpx;
  margin-right: 10rpx;
}

.explain {
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.footer {
  width: 100%;
  height: 90rpx;
  color: #fff;
  line-height: 90rpx;
  text-align: center;
  background: orange;
  font-size: 30rpx;
  position: fixed;
  bottom: 0;
}