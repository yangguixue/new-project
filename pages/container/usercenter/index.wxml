<!--pages/container/usercenter/index.wxml-->
<import src="../../template/no-info.wxml"/>
<view>
  <view class="head">
    <view class="head-top">
      <view class="head-top-left">
        <image src="{{userInfo.userphoto || '../../images/userhead.jpg'}}" class="user-img"/>
      </view>
      <view class="head-top-right">
        <view class="user-name" wx:if="{{userInfo.username}}">{{userInfo.username}}</view>
        <view class="user-name login" wx:else bindtap="handleOpenLogin">登录/注册</view>
        <view class="gold" wx:if="{{userInfo.member_id}}">
          积分 {{userInfo.point || 0}}
        </view>
        <view class="gold gold2" wx:else>
          登录即送2000积分
        </view>
      </view>
    </view>
    <view class="head-bottom" wx:if="{{userInfo.member_id}}">
      <navigator url='../userPage/index?id={{userInfo.member_id}}'>
        <view class='head-block'>
          <view class="collection">
            <view class="number">{{userInfo.post_num || 0}}</view>
            <view>动态</view>
          </view>
        </view>
      </navigator>

      <view class="line"/>
      <navigator url='../fans/index?url=focus'>
        <view class='head-block'>
          <view class="collection">
            <view class="number">{{userInfo.follow_num || 0}}</view>
            <view>关注</view>
          </view>
        </view>      
      </navigator>

      <view class="line"/>
      <navigator url='../fans/index?url=fans'>
        <view class='head-block'>
          <view class="collection">
            <view class="number">{{userInfo.fan_num || 0}}</view>
            <view>粉丝</view>
          </view>
        </view>
      </navigator>
    </view>
  </view>

  <view class='entry' wx:if="{{userInfo.member_id}}">
    <view class='entry-item' bindtap="handleShop" data-shopId="{{userInfo.shop_id}}">
      <view class='entry-icon'>
        <image src='../../images/user-icon01.svg' />
      </view>
      <view>店铺</view>
    </view>
    <block wx:for="{{entry}}" wx:key="{{index}}">
      <navigator url="../{{item.url}}/index">
        <view class='entry-item'>
          <text class='dot' wx:if="{{item.id == 3 && userInfo.message_num != 0}}"/>
          <view class='entry-icon'>
            <image src='../../images/user-icon0{{item.id}}.svg' />
          </view>
          <view>{{item.name}}</view>
        </view> 
      </navigator>
    </block>
  </view>

  <view wx:if="{{userInfo.member_id}}">
    <navigator url="../circleList/index">
      <view class="circle-title">
        <text>我加入的圈子</text>
        <image src="../../images/next.svg" class="next" />
      </view>
    </navigator>
    <view class="circle-join">
      <!-- 加入圈子展示 -->
      <scroll-view class="scroll" scroll-x  wx:if="{{userInfo.cicles.length > 0}}">
        <block wx:for="{{userInfo.cicles}}" wx:key="{{item.cg_id}}">
          <navigator url="../circleDetail/index?id={{item.cg_id}}">
            <view class="circle-content">
              <view class="circle">
                <image src="{{item.icon}}" class="circle-img" />
              </view>
              <text>{{item.name}}</text>
            </view>
          </navigator>
        </block>
      </scroll-view>
      <!-- 没有加入圈子展示 -->
      <block wx:else>
        <template is="no-info" data="{{img: '../../images/cry.svg', tips: '生活一点乐趣都没有，好桑心', button: '前去找乐子 >>', url: '../circle/index'}}" />
      </block>
    </view>
  </view>
  

  <view class="usercenter-list">
    <navigator url="../getPhone/index">
      <view class="list-name">绑定手机<image src="../../images/next.svg" class="next" /><text class='list-text'>{{userInfo.phone ? userInfo.phone : '绑定手机送50积分'}}</text></view>
    </navigator>
    <navigator url="../activity/integration/index">
      <view class="list-name">积分排名<image src="../../images/next.svg" class="next" />
        <text class='list-text'>积分排名送现金啦！</text>
        <image src='../../images/redpackage.svg' class='red-pack'/>
      </view>
    </navigator>
    <navigator url="../leaveMessage/index">
      <view class="list-name">留言反馈<image src="../../images/next.svg" class="next" /></view>
    </navigator>
  </view>
  <view class="usercenter-list">
    <contact-button>联系客服</contact-button>
  </view>
  <view class="usercenter-list">
    <navigator url='../rules/index?name=aboutUs'>  
      <view class="list-name">关于我们<image src="../../images/next.svg" class="next" /></view>
    </navigator>
  </view>
</view>
<noLogin isHide="{{isShowLogin}}" bind:handleCloseLogin="handleCloseLogin"/>