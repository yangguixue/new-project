/* pages/container/usercenter/index.wxss */
@import '../../template/no-info.wxss';
@import '../../lib/iconfont/stylesheet.wxss';

page {
  font-family: '微软雅黑';
  background: #f7f7f7;
}

.head{
  background: #fd5046;
  padding: 0 30rpx;
  text-align: center;
  margin-bottom: 10rpx;
  position: relative;
  color: #fff;
  overflow: hidden;
}

.head-bg {
  position: absolute;
  width: 1500rpx;
  height: 1500rpx;
  border-radius: 1500rpx;
  background: #ff5321;
  top: -1350rpx;
  left: -375rpx;
  z-index: 0;
}

.head-top {
  overflow: hidden;
  padding: 30rpx 0;
}

.head-top-left {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50px;
  margin-right: 30rpx;
  overflow: hidden;
  border: 5rpx solid #ff9e82;
}

.user-img {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50px;
  overflow: hidden;
  border: 5rpx solid #fff;
}

.head-top-right {
  padding-top: 12rpx;
  font-size: 36rpx;
  float: left;
}

.gold {
  margin-top: 26rpx;
  font-size: 28rpx;
  background: #ff9e82;
  padding: 0 20rpx;
  line-height: 50rpx;
  border-radius: 6rpx;
}

.head-bottom {
  font-size: 24rpx;
  color: #000;
  background: #fff;
  border-radius:  10rpx 10rpx 0 0;
}

.head-block {
  display: inline-block;
  padding:30rpx 0;  
}

.collection {
  width: 228rpx;
  height: 52rpx;
  color: #999;
  display: inline-block;
  text-align: center;
}

.number {
  margin-top: 10rpx;
  font-size: 40rpx;
  color: #000;
}

.line {
  width: 2rpx;
  height: 67rpx;
  display: inline-block;
  background: #f1f2f2;
}


.entry {
  background: #fff;
  height: 155rpx;
  display: flex;
  justify-content: space-around;
}

.entry-item {
  text-align: center;
  font-size: 24rpx;
  position: relative;
  color: #484848;
}

.dot {
  width: 25rpx;
  height: 25rpx;
  display: inline-block;
  background: red;
  position: absolute;
  top: -1rpx;
  right: -1rpx;
  border-radius: 25rpx;
}

.entry-icon {
  width: 64rpx;
  height: 64rpx;
  margin: 25rpx 0 20rpx 0;
}

.circle-title {
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  margin: 10rpx 0 0 0;
  padding: 0 30rpx;
  border-top: 1px solid #f1f2f2;
}

.circle-join {
  height: 180rpx;
  background: #fff;
  margin-bottom: 10rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #f1f2f2;
}



.circle-content {
  margin-right: 40rpx;
  font-size: 24rpx;
  display: inline-block;
}

.circle-title {
  font-size: 28rpx;
}

.next {
  width: 30rpx;
  height: 30rpx;
  margin-top: 38rpx;
  float: right;
}

.scroll {
  white-space: nowrap;
}

.circle {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: blue;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.circle-img {
  width: 100%;
  height: 100%;
}

.usercenter-list {
  font-size: 28rpx;
  line-height: 100rpx;
  background: #fff;
  border-top: 1px solid #f1f2f2;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
}

.list-name {
  padding: 0 30rpx;
  border-bottom: 1px solid #f1f2f2;
}

.list-text {
  font-size: 26rpx;
  float: right;
  color: #999;
}

.red-pack {
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin-top: 20rpx;
  margin-right: 10rpx;
}