page {
  background: #f1f2f2;
}

.search {
  background: #fff;
  height: 60rpx;
  padding: 10rpx 30rpx;
}

.banner {
  height: 200rpx;
  background: red;
  margin-bottom: 10rpx;
}

.search-input {
  width: 580rpx;
  height: 60rpx;
  padding: 0 20rpx;
  background: #f7f7f7;
  color: #999;
  font-size: 24rpx;
  float: left;
  border-radius: 4rpx;
}

.search-button {
  width: 42rpx;
  height: 42rpx;
  float: left;
  margin: 8rpx 0 0 15rpx;
}

.list-title {
  height: 80rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 100rpx;
}
