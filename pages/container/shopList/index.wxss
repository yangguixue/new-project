/* pages/container/shopList/index.wxss */
@import '../../template/catelog.wxss';

page {
  background: #f1f2f2;
}

.search {
  background: #fff;
  height: 80rpx;
  padding: 20rpx 30rpx;
}

.banner {
  height: 240rpx;
  background: red;
  margin-bottom: 10rpx;
}

.search-input {
  width: 580rpx;
  height: 80rpx;
  padding: 0 20rpx;
  background: #ececec;
  font-size: 28rpx;
  float: left;
  border-radius: 4rpx;
}

.search-button {
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin: 8rpx 0 0 15rpx;
}

.menu {
  position: relative;
  padding: 0 30rpx;
  border-top: 2rpx solid #dedede;
  background: #fff; 
  border-bottom: 2rpx solid #dedede;
}

.menu2 {
  padding: 0;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 33;
}

.menu-title {
  line-height: 77rpx;
  font-size: 28rpx;
  color: #666;
  display: flex;
  justify-content: space-around;
}

.menu-title2 {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 30;
  background: #fff;
  width: 100%;
}

.selected {
  color: #fd450f;
}

/* 选中筛选 */
.menu-title-hover {
  color: #fd450f;
}

.line {
  width: 4rpx;
  background: #e5e5e5;
  height: 77rpx;
}

.line-hover {
  color: #fd450f;
}

.triangle {
  width: 0;
  height: 0;
  float: right;
  margin: 32rpx 0 0 14rpx;
  border-left: 4px solid transparent;
  border-right: 4px solid transparent;
  border-top: 4px solid #b3b3b3;
}

.triangle2 {
  width: 0;
  height: 0;
  float: right;
  margin: 32rpx 0 0 14rpx;
  border-left: 4px solid transparent;
  border-right: 4px solid transparent;
  border-bottom: 6px solid #fd450f;
}

.menu-list {
  position: fixed;
  top: 77rpx;
  left: 0;
  width: 100%;
  background: #fff;
  max-height: 600rpx;
  overflow: scroll;
}

.dn {
  display: none;
}

.menu-item {
  line-height: 90rpx;
  font-size: 30rpx;
  border-top: 1rpx solid #e1e1e1;
  color: #333;
  text-align: left;
  padding: 0 50rpx;
}

.menu-item-hover {
  color: #fd450f;
}

.mask{
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
}

.button {
  width: 300rpx;
}

.checkbox {
  background: #fff;
  position: fixed;
  top: 77rpx;
  width: 100%;
  min-height: 300rpx;
  border: 2rpx solid #e1e1e1;
}

.label {
  font-size: 35rpx;
  margin: 40rpx 40rpx 60rpx 40rpx;
  display: inline-block;
}

.wx-checkbox-input {
  width: 35rpx !important;
  height: 35rpx !important; 
} 

.wx-checkbox-input.wx-checkbox-input-checked::before {
  font-size: 35rpx !important;
} 

.button {
  width: 300rpx;
}