<!--pages/container/shopList/index.wxml-->
<view class="search">
  <view class="search-left">
    <input type="text" placeholder="输入商家，商品名搜索"  class="search-input" />
  </view>
  <view class="search-button">
    <image src="../../images/search.png" />
  </view>
</view>
<view class="banner">
  <image src="../../images/shop-list.jpg" />
</view>
<view class="list-title pd">
  商家列表
</view>

<block wx:for="{{items}}" wx:key="{{item.id}}">
  <navigator url="../shopDetail/index?id={{item.id}}">
    <shop item="{{item}}"/>
  </navigator>
</block>
<view class="nothing">
  已经到底了哦~
</view>

