/**index.wxss**/
page {
  font-size: 28rpx;
  font-family: 微软雅黑;
  background: #eee;
}
.search {
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 30rpx;
  background: #333;
  overflow: hidden;
}

.place, .searchInput, .userCenter {
  float: left;
}

.place {
  width: 140rpx;
  font-size: 30rpx;
  color: #fff;
}
.placeIcon {
  width: 17rpx;
  height: 22rpx;
  margin-left: 5rpx;
  display: inline-block;
}

.searchInput {
  width: 490rpx;
  height: 60rpx;
  padding: 0 30rpx;
  font-size: 24rpx;
  font-family: 微软雅黑;
  background: #fff;
  border-radius: 100rpx;
  margin-top: 15rpx;
}

/* 菜单栏 */

.flex-wrp{
  height: 300rpx;
  background: #fff;
  padding: 16rpx 30rpx 0 30rpx; 
} 

.item-box {
  width:100%;
  display: flex; 
  flex-direction: row; 
  flex-wrap: wrap; 
  justify-content: space-between; 
}

.flex-item{
  width: 100rpx;
  text-align: center;
  padding: 0 10rpx;
  margin-bottom: 20rpx;
}

.icon{
  width: 80rpx;
}
.icon-img{
  width: 100%;
  height: 40px;
  margin-left: 9rpx;
}
.text{
  font-size: 24rpx;
}

/* 菜单栏 end */

.active-entry {
  overflow: hidden;
  background: #fff;
  padding: 35rpx 30rpx;
  margin: 10rpx 0;
}

.entry01,.entry02,.entry01-left,.entry01-right {
  float: left;
}

.entry01 {
  width: 335rpx;
  border-right: 1px solid #f1f2f2;
}

.entry01-right {
  width: 78rpx;
  height: 71rpx;
  margin-left: 18rpx;
}

.entry02 {
  margin-left: 25rpx;
}

.active-title {
  font-weight: bold;
  font-size: 30rpx;
}

.active-intro {
  margin-top: 13rpx;
  color: #999;
  font-size: 20rpx;
}


.title{
  width: 100%;
  height: 60rpx;
  background: #fff;
}

.title-img {
  width: 171rpx;
  height: 62rpx;
  margin-top: 10rpx;
}

.noToken {
  text-align: center;
  font-size: 26rpx;
  line-height: 80rpx;
  background: #fff;
  padding: 60rpx 0;
}

.login {
  color: #4d638c;
}