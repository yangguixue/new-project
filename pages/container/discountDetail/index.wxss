/* pages/container/discountDetail/index.wxss */

 @import "../../../wxParse/wxParse.wxss";
.line {
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #f1f2f2;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  float: left;
  margin-right: 16rpx;
  margin-top: 20rpx;
}

.text{
  float: left;
  font-size: 28rpx;
}

.intro-title {
  font-size: 32rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #f1f2f2;
}

.intro {
  margin-top: 10rpx;
  padding-bottom: 20rpx;
  margin-bottom: 100rpx;
}

.footer {
  width: 100%;
  height: 100rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  border-top: 2rpx solid #e5e5e5;
}

.footer-l {
  float: left;
  width: 270rpx;
  display: flex;
  justify-content: space-around;
  font-size: 22rpx;
  color: #666;
}

.footer-btn {
  float: left;
  line-height: 100rpx;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
  border-radius: 0;
}

.footer-c {
  background: #ff7d75;
  width: 210rpx;
}

.footer-r {
  background: #e32a1f;
  width: 270rpx;
}

.footer-r2 {
  background: #e32a1f;
  width: 540rpx;
}

.item {
  margin-top: 10rpx;
  text-align: center;
}

.item-btn {
  margin: 0;
  padding: 0;
  line-height: 1.5;
  color: #666;
  font-size: 22rpx;
  background: #fff;
  margin-top: 10rpx;
}

.icon2 {
  width: 50rpx;
  height: 50rpx;
}

