/* pages/container/payment/index.wxss */
page {
  background: #f1f2f2;
}

.top {
  text-align: center;
  padding: 140rpx 0 0 0;
}

.top-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.top-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.top-intro {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 50rpx;
}

.center {
  background: #fff;
  padding: 0 30rpx;
}

.center-content {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.center-item {
  width: 200rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  border: 2rpx solid #fcdb3a;
  border-radius: 10rpx;
  margin:30rpx 0;
}

.center-item-checked {
  background: #fcdb3a;
  color: #fff;
}

.button {
  background: #f5c608;
  margin-top: 200rpx;
}