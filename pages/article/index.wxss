/* pages/article/index.wxss */
@import '../components/messageCard.wxss';
page {
  font-size: 28rpx;
  font-family: '微软雅黑';
  background: #f1f2f2;
}

.comments {
  background: #fff;
  padding-bottom: 20rpx;
}

.title {
  height: 80rpx;
  padding: 0  30rpx;
  line-height: 30rpx;
  border: 1px solid #f1f2f2;
}

.comment-icon {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx 10rpx 0 0;
}

.block {
  padding:20rpx 30rpx 0;
  overflow: hidden;
}

.block-left,.block-right {
  float: left;
}

.block-left {
  width: 90rpx;
  height: 90rpx;
  margin-right: 10rpx;
}

.username {
  color: #4d638c;
  margin-bottom: 20rpx;
}

.context {
  margin-bottom: 40rpx;
}

.date {
  font-size: 24rpx;
}

.nothing {
  text-align: center;
  line-height: 100rpx;
  color: #999;
}

.comment-input {
  width: 100%;
  height: 60rpx;
  padding: 20rpx 30rpx;
  background: #f4f4f4;
  position: fixed;
  bottom: 0;
}

.input {
  width: 400rpx;
  height: 60rpx;
  float: left;
  background: #fff;
  padding: 0 30rpx;
  font-size: 24rpx;
  border-radius: 60rpx;
}

.input-icon {
  width: 44rpx;
  height: 44rpx;
  padding: 0 20rpx;
  margin-top: 5rpx;
}