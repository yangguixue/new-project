.no-info {
  font-size: 24rpx;
  color: #999;
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
}

.no-info-box {
  overflow: hidden;
}

.no-info-img {
  width: 130rpx;
  height: 130rpx;
  float: left;
}

.no-info-text {
  float: left; 
  margin-left: 20rpx;
}

.tips {
  font-size: 26rpx;
}

.no-info-button {
  color: #444;
  border: 2rpx solid #444;
  border-radius: 6rpx;
  padding: 10rpx;
  margin-top: 28rpx;
  display: inline-block;
}