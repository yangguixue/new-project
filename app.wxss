/**app.wxss**/ 
page {
  width: 100%;
  font-family: '微软雅黑';
}

.bg {
  background: #fff;
}

image {
  width: 100%;
  height: 100%;
}

.nothing {
  text-align: center;
  line-height: 90rpx;
  color: #999;
  font-size: 28rpx;
}

.pd {
  padding: 0 30rpx;
  background: #fff;
  overflow: hidden;
}

navigator {
  display: inline;
}

.submit-button {
  padding:0 30rpx;
}

.blue {
  color: #4d638c;
}

.red {
  color: #ff0033;
}

.yellow {
  color: #faa603;
}

.loading-img {
  width: 60rpx;
  height: 60rpx;
}


/* 列表底部文字样式 */
.list-footer {
  text-align: center;
  color: #999;
  line-height: 80rpx;
  font-size: 28rpx;
}


/* button */
.button {
  background: #fd5046;
  color: #fff;
  font-size: 32rpx;
}

.button-disabled {
  background: #cacaca;
}

button::after{
  border: none;
}
