/**app.wxss**/
page {
  width: 100%;
  font-family: '微软雅黑';
}

.bg {
  background: #fff;
}

image {
  width: 100%;
  height: 100%;
}

.nothing {
  text-align: center;
  line-height: 90rpx;
  color: #999;
  font-size: 28rpx;
}

.pd {
  padding: 0 30rpx;
  background: #fff;
  overflow: hidden;
}

navigator {
  display: inline;
}

.submit-button {
  padding:0 30rpx;
}

.button {
  width: 100%;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  background: orange;
  color: #fff;
  border-radius: 10rpx;
}

.blue {
  color: #4d638c;
}

.red {
  color: #ff0033;
}

.loading-img {
  width: 60rpx;
  height: 60rpx;
}


/* 列表底部文字样式 */
.list-footer {
  text-align: center;
  color: #666;
  line-height: 80rpx;
  font-size: 28rpx;
}